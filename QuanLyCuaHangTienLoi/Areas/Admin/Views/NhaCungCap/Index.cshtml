@model IEnumerable<QuanLyCuaHangTienLoi.Models.NhaCungCap>

<h2>Quản lý Nhà Cung Cấp</h2>

<a asp-action="Create" class="btn btn-success mt-3">+ Thêm Nhà Cung Cấp</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Mã NCC</th>
            <th>Tên Nhà Cung Cấp</th>
            <th>Địa Chỉ</th>
            <th>Số Điện Thoại</th>
            <th>Email</th>
            <th>Trạng Thái</th>
            <th>Ngày Hợp Tác</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ncc in Model)
        {
            <tr>
                <td>@ncc.MaNcc</td>
                <td>@ncc.TenNcc</td>
                <td>@ncc.DiaChi</td>
                <td>@ncc.SoDienThoai</td>
                <td>@ncc.Email</td>
                <td>@ncc.TrangThai</td>
                <td>@(ncc.NgayHopTac.HasValue ? ncc.NgayHopTac.Value.ToString("dd/MM/yyyy") : "")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@ncc.MaNcc" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@ncc.MaNcc" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>